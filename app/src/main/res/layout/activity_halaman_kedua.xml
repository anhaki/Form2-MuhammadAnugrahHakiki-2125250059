<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".HalamanKedua">

    <TextView
        android:id="@+id/tv_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANDA TERDAFTAR"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TableLayout
        android:id="@+id/tbl_formulir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_judul"
        android:layout_marginTop="20dp"
        
        >

        <TableRow>
            <TextView
                android:text="NPM"
                android:textColor="@color/black"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_NPM"
                android:text="Isi NPM"
                android:textColor="@color/black"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Nama Mahasiswa"
                android:textColor="@color/black"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_nama"
                android:text="Isi Nama Mahasiswa"
                android:textColor="@color/black"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Jenis Kelamin"
                android:textColor="@color/black"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_jk"
                android:text="Isi Jenis Kelamin"
                android:textColor="@color/black"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="Program Studi"
                android:textColor="@color/black"/>
            <TextView
                android:text=":"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_prodi"
                android:text="Isi Prodi"
                android:textColor="@color/black"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>